<header>
  <nav>
    <div class="account-links">
      <% if current_user %>
        <%= link_to 'Add an Adventure', new_user_post_path(current_user) %>
        <%= link_to 'Log Out', logout_path %>
      <% else %>
        <%= link_to 'Log In', login_path %>
        <%= link_to 'Create an Account', new_user_path %>
      <% end %>
    </div>
  </nav>
</header>
