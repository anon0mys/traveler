<div class="page-title">
  <h2><%= @post.title %></h2>
</div>

<main>
  <div class="post-info">
    <h3><%= @post.user.name %></h3>
    <p><%= @post.location.country.name %></p>
    <div class="post-show-buttons">
      <% if current_user == @post.user %>
        <div class="buttons">
          <%= link_to 'Edit', edit_user_post_path(@post.user, @post), class: 'form-control edit card-button' %>
          <%= button_to 'Delete', user_post_path(@post.user, @post), method: 'delete', class: 'form-control delete card-button'%>
        </div>
      <% end %>
    </div>
  </div>

  <div class="post-body">
    <p><%= @post.body %></p>
  </div>

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <% @post.avatars.each do |avatar| %>
        <div class="item">
          <%= image_tag asset_path avatar %>
        </div>
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</main>
