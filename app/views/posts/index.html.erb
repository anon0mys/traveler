<h2>All Posts</h2>

<% unless @posts.nil? %>
  <ul class='cards-container'>
    <% @posts.each do |post| %>
        <li class='card'>
          <div class="card-image-container">
            <div class="card-image">
              <%= image_tag asset_path 'old.jpeg' %>
            </div>
            <div class="post-title">
              <%= link_to post.title, post_path(post) %>
            </div>
          </div>
          <div class="card-bottom">
            <%= link_to post.user.name, user_path(post.user), class: 'user-title' %>
            <p> <%= post.location.state %>, <%= post.location.country %> </p>
            <p><%= post.body %></p>
          </div>
        </li>
    <% end %>
  </ul>
<% end %>
