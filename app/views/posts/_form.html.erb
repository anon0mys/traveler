<%= form_for [@user, @post], html: { multipart: true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.fields_for @location do |l| %>
    <%= l.label :state %>
    <%= l.text_field :state %>
    <%= l.label :country %>
    <%= l.select :country, ['USA']  %>
  <% end %>
  <%= f.label :body %>
  <%= f.text_area :body %>

  <% if @post.id.nil? %>
    <%= f.submit 'Create Adventure' %>
  <% else %>
    <%= f.submit 'Update Adventure' %>
  <% end %>
<% end %>
