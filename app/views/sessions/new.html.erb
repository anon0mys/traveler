<div class="page-title">
  <h2>Login</h2>
</div>

<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'name@example.com' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: '******' %>
  </div>

  <div class="buttons">
    <%= submit_tag 'Log In', class: 'form-control submit' %>
  </div>
<% end %>
