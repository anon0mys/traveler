<div class='page-title'>
  <h2>Admin Dashboard</h2>
  <div class="show-links">
    <%= link_to 'Create a New User', new_admin_user_path %>
  </div>
</div>

<% unless @users.nil? %>
  <ul class='cards-container'>
    <% @users.each do |user| %>
        <li class='card'>
          <div class="card-image-container">
            <%= link_to user_path(user) do %>
              <div class="card-image">
                <%= image_tag asset_path 'profile.png' %>
              </div>
            <% end %>
          </div>
          <div class="card-bottom">
            <div class="user-info">
              <h3><%= link_to user.name, user_path(user) %></h3>
              <p><%= "Total Posts: #{user.posts.count}" %></p>
              <div class="buttons">
                <%= link_to 'Edit User', edit_admin_user_path(user), class: 'form-control edit' %>
                <%= button_to 'Delete User', admin_user_path(user), method: 'delete', class: 'form-control delete' %>
              </div>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
<% end %>
