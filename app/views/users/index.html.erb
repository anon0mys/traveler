<h2>All Users</h2>

<% unless @users.nil? %>
  <ul class='cards-container'>
    <% @users.each do |user| %>
        <li class='card'>
          <%= link_to user.name, user_path(user) %>
          <%= "Total Posts: #{user.posts.count}" %>
          <div class="top-locations">
            <% user.top_three_locations.each do |country, count| %>
            <p><%= "#{country}: #{count}" %></p>
            <% end %>
          </div>
        </li>
    <% end %>
  </ul>
<% end %>
